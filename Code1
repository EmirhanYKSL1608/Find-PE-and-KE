#include <stdio.h>
float PE, KE, TE = 0;	// PE = Potential Energy || KE = Kinetic Energy || TE = Total Energy	|| TE = PE + KE
float m, g, h, v = 0; // m = mass || g = gravitational field of Earth || h = height || v = velocy
 
int main(){
printf("Enter values to find object energy\n--------------------\n");

printf("Enter value of m = ");
scanf("%f",&m);	

printf("Enter value of g = ");
scanf("%f",&g);	

printf("Enter value of h = ");
scanf("%f",&h);	

printf("Enter value of v = ");
scanf("%f",&v);	
	
	
	PE = m*g*h;
	KE = ((m*v*v)/2); 
	TE = PE + KE;
	
	printf("Potential Energy = %.2f\n",PE);
	printf("Kinetic Energy = %.2f\n",KE);
	printf("Total Energy = %.2f\n",TE);
	
}
